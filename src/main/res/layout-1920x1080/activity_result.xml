<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cleartv.flight.MainActivity">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="1500px"
        android:layout_height="775px"
        android:layout_centerInParent="true"
        android:background="@mipmap/background_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:padding="19px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/flight_number"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/planned_departure_time"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/actual_departure_time"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/planned_arrival_time"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/actual_arrival_time"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/departure_terminal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="34px"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/arrival_terminal"/>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="@android:color/transparent"
            android:scrollbarStyle="outsideOverlay"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:paddingLeft="19px"
            android:paddingRight="15px"
            android:layout_marginRight="4px">


        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dep_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67px"
                android:layout_marginTop="1px"
                android:textColor="#fff"
                android:maxLines="1"
                android:textSize="34px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/arr_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="1px"
                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="34px" />

            <TextView
                android:id="@+id/page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="96px"
                android:text="1/26"
                android:textColor="#fff"
                android:textSize="34px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80px"
                android:layout_height="wrap_content"
                android:layout_marginRight="57px"
                android:text="@string/select"
                android:textSize="28px" />

            <TextView
                android:layout_width="152px"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textSize="28px" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_content"
        android:layout_alignLeft="@id/ll_content"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="60px" />

</RelativeLayout>